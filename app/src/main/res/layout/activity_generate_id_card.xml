<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/darkblue"

        android:gravity="center"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_" />

    <!--android:src="@drawable/dialog_cross"-->

    <TextView
        android:id="@+id/namex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="Generate Id Card  "
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/namex"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="vertical">




                            <ImageView
                                android:id="@+id/compressed_image"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/im_back"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"/>







                    </LinearLayout>



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:orientation="vertical">

                        <!--android:minWidth="300dp"-->
                        <!--android:minHeight="400dp"-->


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/navyblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Details"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <!-- Brief -->
                        <LinearLayout
                            android:id="@+id/namesl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Enter Name"
                                android:textColor="@color/darkblue" />


                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:inputType="textMultiLine"
                                android:padding="5dp" />

                        </LinearLayout>

                        <!-- Hindi -->

                        <!-- English -->


                        <!-- Nothing -->
                        <LinearLayout
                            android:id="@+id/mobilel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:text="Enter Mobile Number "
                                android:textColor="@color/darkblue" />


                            <EditText
                                android:id="@+id/mobilenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:maxLength="10"
                                android:inputType="number"
                                android:padding="5dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:text="Vehicle Driver Address "
                                android:textColor="@color/darkblue" />


                            <EditText
                                android:id="@+id/driveraddress"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_weight="1"

                                android:inputType="textMultiLine"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:text="Vehicle Owner Address "
                                android:textColor="@color/darkblue" />


                            <EditText
                                android:id="@+id/owneraddress"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"

                                android:padding="5dp" />
                        </LinearLayout>




                        <LinearLayout
                            android:id="@+id/pass_valid_from"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:text="Pass Valid From"
                                android:textColor="@color/darkblue" />


                            <TextView
                                android:id="@+id/passvalidfrom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:inputType="phone"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pass_valid_to"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:text="Pass Valid Till"
                                android:textColor="@color/darkblue" />


                            <TextView
                                android:id="@+id/passvalidto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:inputType="phone"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/aadhaar"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Aadhaar Number"
                                android:textColor="@color/navyblue" />

                            <EditText
                                android:id="@+id/aadhaarnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLength="12"
                                android:inputType="number"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/navyblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Vehicle Details"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/statefroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Vehicle Type"
                                android:textColor="@color/navyblue" />

                            <Spinner
                                android:id="@+id/vehicletype"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/districtfroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Vehicle Owner Type"
                                android:textColor="@color/darkblue" />

                            <Spinner
                                android:id="@+id/vehicle_owner_type"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/placefroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Vehicle Number"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/vehicle_number"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:inputType="textCapCharacters"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp" />

                            <Button
                                android:id="@+id/vahan"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="View Vehicle Details"
                                android:textColor="#ffffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chassis"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Chassis Number"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/chassis_number"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/enginenumber"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Engine Number"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/engine_number"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/drivinglicence"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Driving Licence Number"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/driving_licence_number"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:inputType="textCapCharacters"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp" />

                            <Button
                                android:id="@+id/sarthi"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="View Driving Licence Details"
                                android:textColor="#ffffffff" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/passissueauthorityl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/purposel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/navyblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Other Information"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/datel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Entry Date"
                                android:textColor="@color/darkblue" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:visibility="gone"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Entry Time"
                                android:textColor="@color/darkblue" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/district_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:text="District Name"
                                android:textColor="@color/darkblue" />


                            <TextView
                                android:id="@+id/districtname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:inputType="phone"
                                android:padding="5dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/barrier_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:text="Barrier Name"
                                android:textColor="@color/darkblue" />


                            <TextView
                                android:id="@+id/barriername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:inputType="phone"
                                android:padding="5dp" />
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/navyblue"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Back"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Submit"
                    android:textColor="#ffffffff" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>